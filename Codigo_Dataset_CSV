import numpy as np
import pandas as pd
np.random.seed(42)

jugadores = [
    "Thibaut Courtois", "Virgil van Dijk", "John Stones", "Andrew Robertson", "Kyle Walker",
    "Rodri", "Luka Modric", "Kevin De Bruyne", "Pedri", "Bruno Fernandes",
    "Kylian Mbappé", "Erling Haaland", "Vinícius Jr", "Lionel Messi", "Mohamed Salah",
    "Harry Kane", "Robert Lewandowski", "Ousmane Dembélé", "Jude Bellingham", "Bukayo Saka",
    "Marc-André ter Stegen", "Antonio Rüdiger", "Ronald Araújo", "Theo Hernández", "Achraf Hakimi",
    "Declan Rice", "Federico Valverde", "Bernardo Silva", "Gavi", "Martin Ødegaard",
    "Lautaro Martínez", "Olivier Giroud", "Rafael Leão", "Neymar Jr", "Antoine Griezmann",
    "Cristiano Ronaldo", "João Félix", "Khvicha Kvaratskhelia", "Phil Foden", "Jadon Sancho",
    "Manuel Neuer", "Rúben Dias", "Marquinhos", "Jules Koundé", "João Cancelo",
    "Casemiro", "Toni Kroos", "Mason Mount", "Enzo Fernández", "Florian Wirtz",
    "Darwin Núñez", "Alexander Isak", "Victor Osimhen", "Gabriel Jesus", "Lautaro Martínez"
]

n = len(jugadores)

posiciones = []
for j in jugadores:
    if j in ["Thibaut Courtois", "Marc-André ter Stegen", "Manuel Neuer"]:
        posiciones.append(0)  # Portero
    elif j in ["Virgil van Dijk", "John Stones", "Andrew Robertson", "Kyle Walker",
               "Antonio Rüdiger", "Ronald Araújo", "Theo Hernández", "Achraf Hakimi",
               "Rúben Dias", "Marquinhos", "Jules Koundé", "João Cancelo"]:
        posiciones.append(1)  # Defensa
    elif j in ["Rodri", "Luka Modric", "Kevin De Bruyne", "Pedri", "Bruno Fernandes",
               "Declan Rice", "Federico Valverde", "Bernardo Silva", "Gavi", "Martin Ødegaard",
               "Casemiro", "Toni Kroos", "Mason Mount", "Enzo Fernández", "Florian Wirtz"]:
        posiciones.append(2)  # Mediocampista
    else:
        posiciones.append(3)  # Delantero

def gen_stats(pos):
    if pos == 0:  # Portero
        return [np.random.randint(0, 1), np.random.randint(0, 1),
                np.random.randint(10, 30), np.random.randint(0, 1), np.random.randint(20, 60)]
    elif pos == 1:  # Defensa
        return [np.random.randint(0, 5), np.random.randint(0, 5),
                np.random.randint(30, 60), np.random.randint(5, 15), np.random.randint(20, 50)]
    elif pos == 2:  # Mediocampista
        return [np.random.randint(2, 10), np.random.randint(3, 10),
                np.random.randint(40, 90), np.random.randint(10, 25), np.random.randint(10, 25)]
    else:  # Delantero
        return [np.random.randint(10, 40), np.random.randint(5, 15),
                np.random.randint(20, 50), np.random.randint(15, 35), np.random.randint(0, 10)]

datos = [gen_stats(p) for p in posiciones]

df = pd.DataFrame(datos, columns=["Goles", "Asistencias", "Pases", "Regates", "Entradas"])
df.insert(0, "Jugador", jugadores)
df["Posicion"] = posiciones

map_pos = {0: "Portero", 1: "Defensa", 2: "Mediocampista", 3: "Delantero"}
df["Posicion"] = df["Posicion"].map(map_pos)

df

df.to_csv("dataset_futbol_reales.csv", index=False)
print("Dataset guardado como 'dataset_futbol_reales.csv'")
